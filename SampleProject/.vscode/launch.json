{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch & debug SWF",
      "type": "swf",
      "request": "launch",
      "runtimeExecutable": "adl",
      "screensize": "480x762:480x762",
      "preLaunchTask": "ActionScript: compile debug - asconfig.json"
    },
    {
      "type": "swf",
      "request": "attach",
      "name": "Install, Run, and Debug SWF on Android",
      "connect": true,
      "platform": "android",
      "preLaunchTask": "Adobe AIR: package Android debug - asconfig.json"
    },
    {
      "name": "Install and Run on Android",
      "type": "swf",
      "request": "attach",
      "platform": "android",
      "preLaunchTask": "Adobe AIR: package Android release - asconfig.json"
    },
    {
      "name": "Install and Debug on iOS",
      "type": "swf",
      "request": "attach",
      "platform": "ios",
      "connect": true,
      "preLaunchTask": "Adobe AIR: package iOS debug - asconfig.json"
    },
    {
      "name": "Install and Run on iOS",
      "type": "swf",
      "request": "attach",
      "platform": "ios",
      "connect": false,
      "preLaunchTask": "Adobe AIR: package iOS release - asconfig.json"
    },
    {
      "name": "Build iOS App Store Release",
      "type": "swf",
      "request": "attach",
      "platform": "ios",
      "connect": false,
      "preLaunchTask": "Adobe AIR: package iOS release - asconfig.json"
    }
  ]
}